%p#notice= notice
%h1 Listing Contacts
%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Email
      %th Telephone
      %th Message
      %th{:colspan => "3"}
  %tbody
    - @contacts.each do |contact|
      %tr
        %td= contact.first_name
        %td= contact.last_name
        %td= contact.email
        %td= contact.telephone
        %td= contact.message
        %td= link_to 'Show', contact
        %td= link_to 'Edit', edit_contact_path(contact)
        %td= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Contact', new_contact_path
