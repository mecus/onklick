/= render "partials/main_nav"
.container

  %table
    %thead
      %tr
        %th Title
        %th Excerpt
        %th Image
        %th Contents
        %th
        %th
        %th

    %tbody
      - @blogs.each do |blog|
        %tr
          %td= blog.title
          %td= blog.excerpt
          %td= image_tag blog.image.url(:thumb)
          %td= blog.contents
          %td= link_to 'Show', blog
          %td= link_to 'Edit', edit_blog_path(blog)
          %td= link_to 'Destroy', blog, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Blog', new_blog_path
