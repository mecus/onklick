= form_for @work do |f|
  - if @work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work.errors.count, "error")} prohibited this work from being saved:"
      %ul
        - @work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :job_type
    = f.text_field :job_type
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :industry
    = f.text_field :industry
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'