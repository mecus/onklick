// Section for Javascript

:javascript
  //$('#textarea1').val('Write Your Message here');
   	$('#textarea1').trigger('autoresize');


  var options = [
    {selector: '#welcome', offset: 200, callback: 'Materialize.fadeInImage("#welcome")' },
    {selector: '#section-1', offset: 300, callback: 'Materialize.fadeInImage("#section-1")' },
    {selector: '.hero-inner1-1', offset: 300, callback: 'Materialize.fadeInImage(".hero-inner1-1")' },
    {selector: '.hero-image-hosting', offset: 300, callback: 'Materialize.fadeInImage(".hero-image-hosting")' },
    {selector: '#service-container', offset: 300, callback: 'Materialize.fadeInImage("#service-container")' },
    {selector: '#parallax', offset: 200, callback: 'Materialize.fadeInImage("#parallax")' },
    {selector: '#process', offset: 100, callback: 'Materialize.fadeInImage("#process")' },
    {selector: '#contacts', offset: 100, callback: 'Materialize.fadeInImage("#contacts")' },
    {selector: '#company-image', offset: 200, callback: 'Materialize.fadeInImage("#company-image")' }
  ];
  Materialize.scrollFire(options);
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal-trigger').leanModal();
  });
     